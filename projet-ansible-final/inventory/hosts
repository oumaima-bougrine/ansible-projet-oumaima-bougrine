# Groupe des serveurs web
[webservers]
web1 ansible_host=127.0.0.1 ansible_port=2221 ansible_user=root ansible_password=ansible
web2 ansible_host=127.0.0.1 ansible_port=2222 ansible_user=root ansible_password=ansible

# Groupe du serveur de base de donn√©es
[appservers]
db1 ansible_host=127.0.0.1 ansible_port=2223 ansible_user=root ansible_password=ansible

# Groupe parent contenant tous les serveurs
[all_servers:children]
webservers
appservers
